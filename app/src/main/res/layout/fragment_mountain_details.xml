<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.brohede.marcus.fragmentsapp.MountainDetailsFragment">
    >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mountainImage"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/mtn_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_blank_fragment"
                    android:padding="8dp"
                    android:layout_below="@+id/mountainImage"
                    />

                <TextView
                    android:id="@+id/mtn_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_blank_fragment"
                    android:padding="8dp"
                    android:layout_below="@+id/mtn_name"
                    />

                <TextView
                    android:id="@+id/mtn_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_blank_fragment"
                    android:layout_below="@id/mtn_height"
                    android:padding="8dp"
                />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</FrameLayout>
